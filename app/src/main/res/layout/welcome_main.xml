<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/btn_np"
        android:layout_width="177dp"
        android:layout_height="0dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="3dp"
        android:text="Next Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="376dp"
        android:layout_height="294dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/your_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="185dp"
        android:text="Welcome to the Recycle App!  \n\nThank you for joining our community committed to sustainable living. Explore eco-friendly tips, recycling practices, and discover local green initiatives. Together, let's make a positive impact on the environment!  \n\nGet started and enjoy your journey toward a greener lifestyle with Recycle App! "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_np"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>